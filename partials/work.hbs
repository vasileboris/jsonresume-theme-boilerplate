{{#if resume.work.length}}
<section class="container vertical">
	<h2>Work</h2>

        {{#each resume.work}}
        <div>
            {{#if position}}
            <h3>{{position}}</h3>
            {{/if}}
            {{#if company}}
            <div class="element">
                {{#if website}}
                <a href="{{website}}" data-print="url">{{company}}</a>
                {{else}}
                    {{company}}
                {{/if}}
                {{buildPeriod this 'startDate' 'endDate'}}
            </div>
            {{/if}}
            {{#if summary}}
            <div class="element">{{summary}}</div>
            {{/if}}
            {{#if highlights.length}}
            <ul class="element">
                {{#each highlights}}
                <li>{{.}}</li>
                {{/each}}
            </ul>
            {{/if}}
        {{/each}}
    </div>
</section>
{{/if}}