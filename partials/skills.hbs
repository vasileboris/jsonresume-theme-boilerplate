{{#if resume.skills.length}}
<section class="container vertical">
	<h2>Skills</h2>

    <div class="container horizontal">
        {{#each resume.skills}}
            <article class="element">
                {{#if name}}
                <h3>{{name}}</h3>
                {{/if}}

                {{#if level}}
                <div>{{level}}</div>
                {{/if}}
                {{#if keywords.length}}
                <ul>
                    {{#each keywords}}
                    <li>{{.}}</li>
                    {{/each}}
                </ul>
                {{/if}}
            </article>
        {{/each}}
    </div>
</section>
{{/if}}