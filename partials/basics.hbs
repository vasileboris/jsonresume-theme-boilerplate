{{#resume.basics}}
    <section class="vertical-section">
        <h1>{{name}}</h1>
        <h2>{{label}}</h2>

        {{#if summary}}
            <div class="vertical-element">
                {{summary}}
            </div>
        {{/if}}
    </section>
	<section class="horizontal-section">
        {{#if (or website email phone)}}
            <article class="horizontal-element">
                <h3>Contact</h3>

                {{#if website}}
                    <div class="website">
                        <strong>Website</strong>
                        {{website}}
                    </div>
                {{/if}}
                {{#if email}}
                    <div class="email">
                        <strong>Email</strong>
                        {{email}}
                    </div>
                {{/if}}
                {{#if phone}}
                    <div class="phone">
                        <strong>Phone</strong>
                        {{phone}}
                    </div>
                {{/if}}
            </article>
        {{/if}}
		{{#location}}
            {{#if (or address postalCode city countryCode region)}}
                <article class="horizontal-element">
                    <h3>Location</h3>

                    {{#if address}}
                    <div class="address">
                        <strong>Address</strong>
                        {{address}}
                    </div>
                    {{/if}}
                    {{#if postalCode}}
                    <div class="postalCode">
                        <strong>Postal code</strong>
                        {{postalCode}}
                    </div>
                    {{/if}}
                    {{#if city}}
                    <div class="city">
                        <strong>City</strong>
                        {{city}}
                    </div>
                    {{/if}}
                    {{#if countryCode}}
                    <div class="countryCode">
                        <strong>Country code</strong>
                        {{countryCode}}
                    </div>
                    {{/if}}
                    {{#if region}}
                    <div class="region">
                        <strong>Region</strong>
                        {{region}}
                    </div>
                    {{/if}}
                </article>
            {{/if}}
		{{/location}}
		{{#if profiles.length}}
            <article class="horizontal-element">
                <h3>Profiles</h3>

                {{#each profiles}}
                <div class="item">
                    {{#if network}}
                    <strong class="network">
                        {{network}}
                    </strong>
                    {{/if}}
                    {{#if username}}
                    <div class="username">
                        {{username}}
                    </div>
                    {{/if}}
                    {{#if url}}
                    <div class="url">
                        <a href="{{url}}">Link</a>
                    </div>
                    {{/if}}
                </div>
                {{/each}}
            </article>
		{{/if}}
	</section>
{{/resume.basics}}